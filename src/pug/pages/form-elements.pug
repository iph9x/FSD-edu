extends ../layouts/uikit
include ../components/text-field/text-field
include ../components/dropdown/dropdown
include ../components/masked-text-field/masked-text-field
include ../components/date-dropdown/date-dropdown
include ../components/filter-date-dropdown/filter-date-dropdown
include ../components/subscription-text-field/subscription-text-field
include ../components/checkbox-buttons/checkbox-buttons
include ../components/radio-buttons/radio-buttons
include ../components/toggle/toggle
include ../components/like-button/like-button
include ../components/rate-button/rate-button
include ../components/range-slider/range-slider
include ../components/buttons/buttons
include ../components/pagination/pagination
include ../components/expandable-checkbox-list/expandable-checkbox-list
include ../components/rich-checkbox-buttons/rich-checkbox-buttons
include ../components/bullet-list/bullet-list
include ../components/room-info/room-info
include ../components/review/review

block variables
  - var title = 'Form Elements'
  - var parentClass = 'form-elements'
  - var checkboxArr = [{name: 'Можно курить', id: 'breakfast'}, {name: 'Можно с питомцами', id: 'pet'}, {name: 'Можно пригласить гостей (до 10 человек)', id: 'count'}]
  - var expandableCheckbox = [{name: 'Завтрак', id: 'smoke'}, {name: 'Письменный стол', id: 'table'}, {name: 'Стул для кормления', id: 'chair'}, {name: 'Кроватка', id: 'cot'}, {name: 'Телевизор', id: 'tv'}, {name: 'Шампунь', id: 'shampoo'}]
  - var roomItems = [{content: 'insert_emoticon', title: 'Комфорт', sub: 'Шумопоглощающие стены'}, {content: 'location_city', title: 'Удобство', sub: 'Окно в каждой из спален'}]

block content
  section.form-elements__wrapper
    .container.uikit-container.form-elements-container
      .column.column-mr-126
        +text-field({ title: 'Text field', placeholderText: 'Email' })
        +dropdown({ title: 'Dropdown', placeholderText: 'Сколько гостей', id: 'guests' })
        +masked-text-field({ title: 'Masked Text field', placeholderText: 'ДД.ММ.ГГГГ' })
        .date-container
          +date-dropdown({ title: 'Date Dropdown', id: 'date-in' })
          +date-dropdown({ title: 'Date Dropdown', id: 'date-out' })
        +filter-date-dropdown({ id: 'datepick', title: 'Filter Date Dropdown', dateIn: '19 авг', dateOut: '23 авг' })
        +subscription-text-field({ title: 'Subscription Text Field', placeholderText: 'Email' })
      .column.column-mr-72
        +checkbox-buttons( {title: 'Checkbox buttons', radios: checkboxArr } )
        +radio-buttons( {title: 'Radio buttons'} )
        +toggle({ id: 'suggestions', title: 'Toggle', text: 'Получать спецпредложения' })
        +like-button({title: 'Like button'})
        +rate-button({title: 'Rate button'})
      .column
        +range-slider({title: 'Range slider'})
        +buttons({title: 'Buttons'})
        +pagination({title: 'Pagination'})
      .column.column-mr-126
        +dropdown({ title: 'Dropdown', placeholderText: '2 спальни, 2 кровати', id: 'rooms' })
      .column.column-span-2
        +dropdown({ title: 'Dropdown', placeholderText: 'Сколько гостей', id: 'guests' })
      .column.column-expandable.column-mr-126
        +expandable-checkbox-list({ title: 'Expandable checkbox list', radios: expandableCheckbox })
      .column.column-mr-72
        +rich-checkbox-buttons({ title: 'Rich checkbox buttons' })
      .column
        +bullet-list({title: 'Bullet list'})
      .column.column-mr-126
        +room-info({items: roomItems})
      .column-span-2
        +review({src: 'assets/img/avatar.jpg', name: 'Мурад Сарафaнов', date: '5 дней назад', text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})
      