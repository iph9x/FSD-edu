extends ../uikit
include ../components/text-field/text-field
include ../components/dropdown/dropdown
include ../components/masked-text-field/masked-text-field
include ../components/date-dropdown/date-dropdown
include ../components/filter-date-dropdown/filter-date-dropdown
include ../components/subscription-text-field/subscription-text-field
include ../components/checkbox-buttons/checkbox-buttons
include ../components/radio-buttons/radio-buttons
include ../components/toggle/toggle
include ../components/like-button/like-button
include ../components/rate-button/rate-button
include ../components/range-slider/range-slider
include ../components/button/button
include ../components/pagination/pagination
include ../components/expandable-checkbox-list/expandable-checkbox-list
include ../components/rich-checkbox-buttons/rich-checkbox-buttons
include ../components/bullet-list/bullet-list
include ../components/room-info/room-info
include ../components/review/review

block variables
  -
    const title = 'Form Elements'
    const parentClass = 'form-elements'
    const checkboxItems = [
      { labelText: 'Можно курить', id: 'breakfast' },
      { labelText: 'Можно с питомцами', id: 'pet' },
      { labelText: 'Можно пригласить гостей (до 10 человек)', id: 'count' }
    ]
    const expandableCheckboxItems = [
      { labelText: 'Завтрак', id: 'smoke' },
      { labelText: 'Письменный стол', id: 'table' },
      { labelText: 'Стул для кормления', id: 'chair' },
      { labelText: 'Кроватка', id: 'cot' },
      { labelText: 'Телевизор', id: 'tv' },
      { labelText: 'Шампунь', id: 'shampoo' }
    ]
    const roomItems = [
      { iconName: 'insert_emoticon', title: 'Комфорт', sub: 'Шумопоглощающие стены' },
      { iconName: 'location_city', title: 'Удобство', sub: 'Окно в каждой из спален' }
    ]

block content
  main.form-elements__wrapper
    .form-elements__container
      .form-elements__text-inputs
        .form-elements__column
          .form-elements__text-field
            +text-field({ title: 'Text field', placeholderText: 'Email' })
          +dropdown({ title: 'Dropdown', placeholderText: 'Сколько гостей', id: 'guests' })
          +masked-text-field({ title: 'Masked Text field', placeholderText: 'ДД.ММ.ГГГГ' })
          .form-elements__date-dropdowns-wrapper
            +date-dropdown({ title: 'Date Dropdown', isDateIn: true })
            +date-dropdown({ title: 'Date Dropdown' })
          +filter-date-dropdown({ title: 'Filter Date Dropdown' })
          +subscription-text-field({ title: 'Subscription Text Field', placeholderText: 'Email' })
      .form-elements__interactive-inputs
        .form-elements__column
          +checkbox-buttons({ title: 'Checkbox buttons', checkboxItems: checkboxItems } )
          .form-elements__radio-buttons
            +radio-buttons({ title: 'Radio buttons'} )
          +toggle({ id: 'suggestions', title: 'Toggle', labelText: 'Получать спецпредложения' })
          +like-button({ title: 'Like button' })
          +rate-button({ title: 'Rate button' })
      .form-elements__column
        +range-slider({ title: 'Range slider'})
        .form-elements__buttons
          .form-elements__buttons-title Buttons
          .form-elements__buttons-box
            +button({ text: 'Click me', style: 'fill' })
            +button({ text: 'Click me', style: 'border' })
            +button({ text: 'Click me', style: 'string' })
            +button({ text: 'Перейти к оплате', style: 'fill', type: 'submit' })
        +pagination({ title: 'Pagination' })
      .form-elements__rooms-dropdown
        .form-elements__column
          +dropdown({ title: 'Dropdown', placeholderText: '2 спальни, 2 кровати', id: 'rooms' })
      .form-elements__guests-dropdown
        .form-elements__column
          +dropdown({ title: 'Dropdown', placeholderText: 'Сколько гостей', id: 'guests' })
      .form-elements__expandable-checkbox-list
        .form-elements__column
          +expandable-checkbox-list({ title: 'Expandable checkbox list', checkboxItems: expandableCheckboxItems })
      .form-elements__rich-checkbox-buttons
        .form-elements__column
          +rich-checkbox-buttons({ title: 'Rich checkbox buttons' })
      .form-elements__column
        +bullet-list({ title: 'Bullet list'})
      .form-elements__room-info
        .form-elements__column
          +room-info({ items: roomItems })
      .form-elements__review
        +review({
          imgSrc: 'components/review/img/avatar.jpg',
          username: 'Мурад Сарафaнов',
          date: '5 дней назад',
          message: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
        })
      