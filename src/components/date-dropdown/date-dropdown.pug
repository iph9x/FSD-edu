mixin date-dropdown({ title, main })
  .date-dropdown
    if title
      .date-dropdown__title= title
    .date-dropdown__arrow expand_more
    if main
      input.date-dropdown__input(type="text", placeholder="ДД.ММ.ГГГГ", class=`js-date-dropdown__input datepicker-here js-date-in`, data-range="true" data-multiple-dates-separator=".")
    else
      input.date-dropdown__input(type="text", placeholder="ДД.ММ.ГГГГ" class=`js-date-dropdown__input js-date-out`)