include ../dropdown/dropdown
include ../filter-date-dropdown/filter-date-dropdown
include ../checkbox-buttons/checkbox-buttons
include ../range-slider/range-slider
include ../expandable-checkbox-list/expandable-checkbox-list
include ../rich-checkbox-buttons/rich-checkbox-buttons

-
  const checkboxArr = [{name: 'Можно курить', id: 'breakfast'}, {name: 'Можно с питомцами', id: 'pet'}, {name: 'Можно пригласить гостей (до 10 человек)', id: 'count'}]
  const expandableCheckbox = [{name: 'Завтрак', id: 'smoke'}, {name: 'Письменный стол', id: 'table'}, {name: 'Стул для кормления', id: 'chair'}, {name: 'Кроватка', id: 'cot'}, {name: 'Телевизор', id: 'tv'}, {name: 'Шампунь', id: 'shampoo'}]

form.filter
  .filter__filter-date-dropdown
    +filter-date-dropdown({ id: 'datepick', title: 'Даты пребывания в отеле', dateIn: '19 авг', dateOut: '23 авг' })
  .filter__dropdown-guests
    +dropdown({ title: 'Гости', placeholderText: 'Сколько гостей', id: 'guests' })
  .filter__range-slider
    +range-slider({title: 'Диапазон цены', note: true })
  .filter__checkbox-buttons
    +checkbox-buttons({title: 'Правила дома', radios: checkboxArr })
  .filter__checkbox-buttons
    +rich-checkbox-buttons({ title: 'Доступность' })
  .filter__dropdown-rooms
    +dropdown({ title: 'Удобства номера', placeholderText: 'Сколько комнат', id: 'rooms' })
  .filter__expandable-checkbox-list
  +expandable-checkbox-list({ title: 'Дополнительные удобства', radios: expandableCheckbox })