include ../checkbox/checkbox

mixin expandable-checkbox-list(props)
  -
    var radios = props.radios;

  .expandable-checkbox-list.js-expandable-checkbox-list
    .expandable-checkbox-list__wrapper-title
      .expandable-checkbox-list__title= props.title
      .expandable-checkbox-list__arrow.expandable-checkbox-list__arrow.js-expandable-checkbox-list__arrow expand_more
    .expandable-checkbox-list__items.js-expandable-checkbox-list__items
      each radio in radios
        .expandable-checkbox-list__checkbox
          +checkbox({ name: radio.name, id: radio.id, placeholder: props.placeholder })
  